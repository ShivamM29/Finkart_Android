<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finkart" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!-- Customize your theme here. -->

    </style>

    <style name="SecondTheme" parent="Theme.Finkart">
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
<!--        <item name="android:textColor">@color/white</item>-->
    </style>

    <style name="AppTheme.RoundedButton.Small" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_32sdp</item>
        <item name="android:paddingEnd">@dimen/_32sdp</item>
        <item name="shapeAppearance">@style/AppTheme.RoundedButton.ShapeAppearance</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.009</item>
    </style>

    <style name="AppTheme.RoundedButton.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="bottomSheetStyle">@style/SheetDialogStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SheetDialogStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="circularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_16sdp</item>
    </style>

    <style name="FinkartLoading" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>