<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_main"
    android:orientation="vertical"
    tools:context=".views.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/margin_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accounts"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/dark_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:theme="@style/circularImage"
            app:strokeWidth="1dp"
            android:padding="@dimen/_1sdp"
            app:strokeColor="@color/dark_blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="2dp">

        <ScrollView
            android:id="@+id/rvHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/padding_small"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvWallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="My Wallet"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvMyInvestment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="My Investment"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvEkyc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="EKYC Details"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvNominee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Nominee Details"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvManageBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Manage Banks"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvHelpAndSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Help &amp; Support"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvTermsConditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Terms &amp; Conditions"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Privacy Policy"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvRateUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Rate Us"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/tvLogOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_small"
                        android:text="Log Out"
                        android:drawableEnd="@drawable/round_arrow_forward_ios_24"
                        android:background="?attr/selectableItemBackground"
                        android:textSize="@dimen/_16ssp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>